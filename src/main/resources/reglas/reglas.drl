package reglas;

import cl.alvaro.drools.dominio.Persona;

rule "Clasificar como adulto"
when
    $p : Persona(edad >= 18)
then
    $p.setCategoria("Adulto");
    System.out.println($p.getNombre() + " es Adulto");
end

rule "Clasificar como menor"
when
    $p : Persona(edad < 18)
then
    $p.setCategoria("Menor de edad");
    System.out.println($p.getNombre() + " es Menor de edad");
end